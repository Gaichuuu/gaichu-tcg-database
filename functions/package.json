{
  "name": "gaichu-api",
  "version": "1.0.0",
  "description": "API for Gaichu TCG Database",
  "main": "lib/index.js",
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "scripts": {
    "copy-data": "rm -rf data && mkdir -p data && cp -r ../data/. data/",
    "build": "npm run copy-data && tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "deploy": "firebase deploy --only functions",
    "deploy:staging": "firebase deploy --only functions --project staging",
    "lint": "eslint src/**/*.ts",
    "test": "vitest"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "uuid": "^10.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.4.0",
    "vitest": "^2.0.0"
  }
}
