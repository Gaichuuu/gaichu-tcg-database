{
  "$schema": "http://json-schema.org/draft-07/schema#",

  "$defs": {
    "i18nString": {
      "oneOf": [
        { "type": "string" },
        {
          "type": "object",
          "properties": {
            "en": { "type": "string", "minLength": 1 },
            "ja": { "type": "string", "minLength": 1 }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      ]
    }
  },

  "type": "object",
  "required": [
    "id",
    "number",
    "sort_by",
    "name",
    "image",
    "set_ids",
    "thumb",
    "variant"
  ],
  "properties": {
    "id": { "type": "string", "format": "uuid" },

    "number": { "type": "number" },
    "sort_by": { "type": "number" },

    "name": { "$ref": "#/$defs/i18nString" },

    "image": { "type": "string", "format": "uri" },
    "rarity": { "type": "string" },

    "illustrators": {
      "type": "array",
      "minItems": 1,
      "items": { "type": "string" }
    },

    "set_ids": {
      "type": "array",
      "items": { "type": "string", "format": "uuid" },
      "minItems": 1
    },

    "thumb": { "type": "string", "format": "uri" },
    "variant": { "type": "string" }
  },

  "additionalProperties": true
}
