{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["id", "short_name", "name", "logo", "sort_by"],
    "properties": {
      "id": {
        "type": "string",
        "format": "uuid"
      },
      "short_name": {
        "type": "string"
      },
      "name": {
        "type": "string"
      },
      "logo": {
        "type": "string",
        "format": "uri"
      },
      "sort_by": {
        "type": "number"
      }
    }
  }
}
