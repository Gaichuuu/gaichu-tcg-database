{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "allOf": [
      { "$ref": "../cards.schema.base.json" },
      {
        "type": "object",
        "required": [
          "id",
          "number",
          "name",
          "variant",
          "illustrators",
          "rarity",
          "image",
          "thumb"
        ],
        "properties": {
          "id": { "type": "string" },
          "number": { "type": "integer", "minimum": 1 },
          "sort_by": { "type": "integer" },
          "name": { "type": "string", "minLength": 1 },
          "variant": {
            "type": "string",
            "enum": ["Normal"]
          },

          "illustrators": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "enum": ["Corey Lewis", "Jemooshka", "PMZ", "taktikal1", "gaichu"]
            }
          },

          "rarity": {
            "type": "string",
            "enum": ["Gold", "Silver", "Bronze", "Promo"]
          },

          "set_ids": {
            "type": "array",
            "items": { "type": "string" }
          },

          "type": {
            "type": "string",
            "enum": [
              "Beastie",
              "Beastie Caster",
              "Beastie Witch",
              "Beastie Demon",
              "Beastie Bloodsucker Cat",
              "Spell",
              "Artifact",
              "Artifact Pumpkin",
              "Beastie Dinosaur",
              "Beastie Spirit",
              "Special Aura",
              "Beastie Dragon",
              "Beastie Bird",
              "Beastie Wolf",
              "Beastie Fearsome Critter",
              "Artifact Hygiene Stone"
            ]
          },

          "cost": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["total", "aura"],
              "properties": {
                "total": { "type": "string" },
                "aura": {
                  "type": "string",
                  "enum": [
                    "Dark",
                    "Spirit",
                    "Neutral",
                    "Lightning",
                    "Water",
                    "Flame",
                    "Cosmic",
                    "Forest",
                    "Light",
                    "Frost",
                    "Earth",
                    "Special"
                  ]
                }
              },
              "additionalProperties": false
            }
          },

          "lp": { "type": "string" },

          "traits": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "Flight",
                "Stoneskin",
                "Fear",
                "Immortal",
                "Fleet",
                "Trap",
                "Defender",
                "Spectral",
                "Burrow",
                "Magiproof",
                "First Strike",
                "Convert"
              ]
            }
          },

          "terra": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "attack": { "type": "string" },
                "icon": {
                  "type": "string",
                  "enum": [
                    "City",
                    "Nighttime",
                    "Fog",
                    "Dusk",
                    "Farm",
                    "Lake",
                    "River",
                    "Winter",
                    "Mountain",
                    "Snowing",
                    "LightningStorm",
                    "Raining",
                    "Woodlands",
                    "FullMoon",
                    "NorthPole"
                  ]
                },
                "lp": { "type": "string" }
              },
              "additionalProperties": false
            }
          },

          "metadata": {
            "type": "object",
            "properties": {
              "discovered": { "type": "string" },
              "gps": { "type": "string" },
              "weight": { "type": "string" },
              "height": { "type": "string" },
              "length": { "type": "string" },
              "legnth": { "type": "string" }
            },
            "additionalProperties": false
          },

          "effect": { "type": "string" },
          "description": { "type": "string" },

          "zoo_attack": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "damage"],
              "properties": {
                "name": { "type": "string" },
                "status": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["Paralyze", "Confused", "Burn", "Frozen", "Scared"]
                  }
                },
                "multiplier": { "type": "string" },
                "damage": { "type": "string" },
                "bonus": { "type": "string" },
                "effect": { "type": "string" }
              },
              "additionalProperties": false
            }
          },

          "image": { "type": "string", "format": "uri" },
          "thumb": { "type": "string", "format": "uri" },

          "limit": { "type": "integer" },

          "note": { "type": "string" }
        }
      }
    ]
  }
}
