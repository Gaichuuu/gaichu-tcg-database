{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "$defs": {
    "i18nString": {
      "oneOf": [
        { "type": "string" },
        {
          "type": "object",
          "properties": {
            "en": { "type": "string", "minLength": 1 },
            "ja": { "type": "string", "minLength": 1 }
          },
          "minProperties": 1,
          "additionalProperties": false
        }
      ]
    }
  },
  "items": {
    "allOf": [
      { "$ref": "../cards.schema.base.json" },
      {
        "type": "object",
        "required": ["parody", "hp", "description", "measurement", "attacks"],
        "properties": {
          "parody": { "type": "string" },

          "illustrators": {
            "type": "array",
            "items": { "type": "string", "enum": ["Alex Roh"] }
          },

          "rarity": { "type": "string", "enum": ["Common", "Rare"] },
          "variant": { "type": "string", "enum": ["Normal", "Holo"] },

          "set_short_name": {
            "type": "string",
            "enum": ["set1", "set2", "og"]
          },
          "series_short_name": { "type": "string", "enum": ["wm"] },

          "sets": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["name", "image"],
              "properties": {
                "name": {
                  "type": "string",
                  "enum": ["Set One", "Set One (reprint)", "Set Two"]
                },
                "image": { "type": "string", "format": "uri" }
              },
              "additionalProperties": false
            }
          },

          "hp": { "type": "string" },

          "description": { "$ref": "#/$defs/i18nString" },

          "measurement": {
            "type": "object",
            "required": ["height", "weight"],
            "properties": {
              "height": { "type": "string" },
              "weight": { "type": "string" }
            },
            "additionalProperties": false
          },

          "attacks": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["name", "effect"],
              "properties": {
                "name": { "$ref": "#/$defs/i18nString" },
                "effect": { "$ref": "#/$defs/i18nString" },
                "damage": { "type": "string" },
                "costs": {
                  "type": "array",
                  "minItems": 1,
                  "items": {
                    "type": "string",
                    "enum": [
                      "Fire",
                      "Fighting",
                      "Psychic",
                      "Electric",
                      "Dark",
                      "Dragon",
                      "Steel",
                      "Water",
                      "Grass",
                      "Normal"
                    ]
                  }
                }
              },
              "additionalProperties": false
            }
          }
        }
      }
    ]
  }
}
