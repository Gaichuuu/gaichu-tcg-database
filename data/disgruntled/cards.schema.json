{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "allOf": [
      { "$ref": "../cards.schema.base.json" },
      {
        "type": "object",
        "required": ["type"],
        "properties": {
          "illustrators": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["Britanny Elizondo"]
            }
          },
          "rarity": {
            "type": "string",
            "enum": ["SR", "SSR"]
          },
          "type": {
            "type": "string",
            "enum": [
              "Art o fact",
              "Beastie Fearsome Critter",
              "The Beast on You Back",
              "Psychological Conditioning",
              "Beastly Humans"
            ]
          },
          "lp_alt": {
            "type": "string"
          },
          "effect": {
            "type": "string"
          },
          "strength": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "value": { "type": "string" }
              },
              "required": ["value"],
              "additionalProperties": false
            }
          },
          "description": {
            "type": "string"
          },
          "limit": {
            "type": "number"
          },
          "zoo_attack": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name", "damage"],
              "properties": {
                "name": {
                  "type": "string"
                },
                "damage": {
                  "type": "string"
                },
                "effect": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            },
            "minItems": 1
          },
          "variant": {
            "type": "string",
            "enum": ["Holo", "Reverse Holo"]
          }
        }
      }
    ]
  }
}
