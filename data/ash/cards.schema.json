{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "allOf": [
      { "$ref": "../cards.schema.base.json" },
      {
        "type": "object",
        "required": ["type"],
        "properties": {
          "illustrators": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": ["Soo Zhi Wei"]
            }
          },
          "rarity": {
            "type": "string",
            "enum": ["Rare", "Secret Rare"]
          },
          "description": {
            "type": "string"
          },
          "type": {
            "type": "string",
            "enum": ["Pokemon", "Trainer"]
          },
          "color": {
            "type": "string",
            "enum": [
              "Darkness",
              "Dragon",
              "Fairy",
              "Fighting",
              "Fire",
              "Grass",
              "Lightning",
              "Colorless",
              "Psychic",
              "Water",
              "Metal"
            ]
          },
          "stage": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "properties": {
                "evolution": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "basic": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          },
          "hp": {
            "type": "string"
          },
          "attacks": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["name"],
              "properties": {
                "name": {
                  "type": "string"
                },
                "effect": {
                  "type": "string"
                },
                "damage": {
                  "type": ["string"]
                },
                "costs": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": [
                      "Darkness",
                      "Dragon",
                      "Fairy",
                      "Fighting",
                      "Fire",
                      "Grass",
                      "Lightning",
                      "Colorless",
                      "Psychic",
                      "Water",
                      "Metal",
                      "Plus"
                    ]
                  },
                  "minItems": 1
                }
              },
              "additionalProperties": false
            },
            "minItems": 1
          },
          "weakness": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "Darkness",
                    "Dragon",
                    "Fairy",
                    "Fighting",
                    "Fire",
                    "Grass",
                    "Lightning",
                    "Psychic",
                    "Water",
                    "Metal"
                  ]
                },
                "value": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          },
          "resistance": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": [
                    "Darkness",
                    "Dragon",
                    "Fairy",
                    "Fighting",
                    "Fire",
                    "Grass",
                    "Lightning",
                    "Psychic",
                    "Water",
                    "Metal"
                  ]
                },
                "value": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          },
          "retreat": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["Colorless"]
                }
              }
            },
            "additionalProperties": false
          },
          "variant": {
            "type": "string",
            "enum": ["Holo"]
          },
          "rule": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          }
        }
      }
    ]
  }
}
