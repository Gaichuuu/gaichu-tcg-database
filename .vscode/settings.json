{
  "prettier.configPath": ".prettierrc",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "json.schemas": [
    {
      "fileMatch": [
        "**/data/cards.schema.base.json",
        "**/data/*/cards.schema.json"
      ],
      "url": "http://json-schema.org/draft-07/schema#"
    },
    {
      "fileMatch": ["**/data/wm/cards.json"],
      "url": "./data/wm/cards.schema.json"
    },
    {
      "fileMatch": ["**/data/mz/cards.json"],
      "url": "./data/mz/cards.schema.json"
    },
    {
      "fileMatch": ["**/data/ash/cards.json"],
      "url": "./data/ash/cards.schema.json"
    },
    {
      "fileMatch": ["**/data/oz/cards.json"],
      "url": "./data/oz/cards.schema.json"
    },
    {
      "fileMatch": ["**/data/news/index.json", "data/news/index.json"],
      "url": "./data/news/index.schema.json"
    },
    {
      "fileMatch": ["data/illustrators.json"],
      "url": "./data/illustrators.schema.json"
    },
    { "fileMatch": ["data/rarity.json"], "url": "./data/rarity.schema.json" },
    { "fileMatch": ["data/series.json"], "url": "./data/series.schema.json" },
    { "fileMatch": ["data/sets.json"], "url": "./data/sets.schema.json" }
  ]
}
